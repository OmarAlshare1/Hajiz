# Server Configuration
PORT=5000
NODE_ENV=development
HOST=127.0.0.1

# MongoDB Connection (Use MongoDB Atlas for production)
MONGODB_URI=mongodb://localhost:27017/hajiz

# JWT Secret (MUST be at least 32 characters long and cryptographically secure)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHARACTER_RANDOM_STRING_FOR_PRODUCTION
JWT_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AiSensy Configuration (for WhatsApp Business API)
AISENSY_API_KEY=your_aisensy_api_key_here
AISENSY_CAMPAIGN_NAME=verification_campaign